<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Data</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-dark bg-success navbar-expand-lg">
      <a class="navbar-brand m-auto">Admin</a>
    </nav>
    <form
      class="row gx-3 gy-2 align-items-center mt-4 mx-auto justify-content-center"
      style="width: 500px"
      method="post"
    >
      <div class="col-sm-3">
        <input
          type="number"
          class="form-control"
          id="specificSizeInputName"
          placeholder="Range 1"
          name="left"
          value="<%= left %>"
        />
      </div>
      <div class="col-sm-3">
        <input
          type="number"
          class="form-control"
          id="specificSizeInputName"
          placeholder="Range 1"
          name="right"
          value="<%= right %>"
        />
      </div>

      <div class="col-auto">
        <button type="submit" class="btn btn-success">Show</button>
      </div>
      <div class="col-auto">
        <button
          type="submit"
          class="btn btn-outline-success"
          formaction="/pdf-download"
        >
          Downlod PDF
        </button>
      </div>
      <% if (typeof err !== 'undefined') { %>
      <p class="text-danger"><%= err %></p>
      <% } %>
    </form>

    <% if (data.length) { %>
    <table
      class="shadow-lg my-3 table table-striped m-auto"
      style="max-height: 80vh; overflow: scroll; width: 80%"
    >
      <thead>
        <tr>
          <th scope="col">Sno</th>
          <th scope="col">Token</th>
          <th scope="col">Name</th>
          <th scope="col">Number</th>
        </tr>
      </thead>
      <% for( let index = 0; index < data.length; index++ ) { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= data[index].id %></td>
        <td><%= data[index].name %></td>
        <td><%= data[index].number %></td>
      </tr>
      <% } %>
    </table>
    <% } %>
  </body>
</html>
